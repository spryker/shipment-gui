{% for expense in order.expenses %}
    {% if expense.type == shipmentExpenseType %}
        <div class="col-xs-8">
            <p>
                {{ 'Shipment' | trans }} {{ expense.shipment.method.carrierName ?? '' }} {{ expense.name }}
            </p>
        </div>
        <div class="col-xs-4"><p>{{ expense.sumPrice | money(true, order.currencyIsoCode) }}</p></div>
    {% endif %}
{% endfor %}
