{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Delivery Methods' %}
{% block section_title %}{{ widget_title | trans }}{% endblock %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' with { widget_title: widget_title | trans } %}
        {% block widget_header_content %}
            {{ createActionButton('/shipment-gui/create-carrier/index', 'Create new carrier company' | trans) }}
            {{ createActionButton('/shipment-gui/create-shipment-method', 'Create new delivery method' | trans) }}
        {% endblock %}

        {% block widget_content %}
            {{ methodTable | raw }}
        {% endblock %}
    {% endembed %}
{% endblock %}
