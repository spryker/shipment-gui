<?xml version="1.0"?>
<database name="zed" namespace="Orm\Zed\Sales\Persistence" package="src.Orm.Zed.Sales.Persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd">

    <table name="spy_sales_shipment" phpName="SpySalesShipment">
        <column name="fk_sales_order_address" type="INTEGER" required="true" />
        <column name="requested_delivery_date" type="VARCHAR" size="255"/>

        <foreign-key name="spy_sales_shipment-fk_sales_order_address" foreignTable="spy_sales_order_address" phpName="SpySalesOrderAddress" refPhpName="SpySalesShipment">
            <reference local="fk_sales_order_address" foreign="id_sales_order_address"/>
        </foreign-key>
    </table>

    <table name="spy_sales_order_item" phpName="SpySalesOrderItem">
        <column name="fk_sales_shipment" type="INTEGER" required="false" />

        <foreign-key name="spy_sales_order_item-fk_sales_shipment" foreignTable="spy_sales_shipment" phpName="SpySalesShipment" refPhpName="SpySalesOrderItem">
            <reference local="fk_sales_shipment" foreign="id_sales_shipment"/>
        </foreign-key>
    </table>

</database>
